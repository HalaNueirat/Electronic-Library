@using Microsoft.AspNetCore.Http;
@model List<Book>
<style>
    aside {
        float: left;
        margin: 10px;
        width: 1000px;
    }


    table, tbody, thead, tr, td, th {
        border: thin solid black;
    }

    th {
        background-color: greenyellow;
    }

</style>
<h1> Books details </h1>
<div>
    <form asp-controller="Employee" asp-action="Search" method="post">
        <label>Enter Part Of Book Title</label>
        <input type="text" name="k" />
        <button type="submit">Search</button>
    </form>
</div>
<br />
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book Title </th>
            <th>Book Author </th>
            <th>Book Price </th>
            <th>Employee Name </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book b in Model)
        {
            <tr>
                <td>@b.BookId</td>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Price</td>
                <td>@b.Employee.Name</td>
                <td>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@b.BookId">Delete</a>
                    &nbsp;&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />

<br />
<br />
<a class="btn btn-primary" asp-controller="Employee" asp-action="Add"> Add a Book </a>
<br />
<br />
<a class="btn btn-primary" asp-controller="Employee" asp-action="Logout"> Logout </a>